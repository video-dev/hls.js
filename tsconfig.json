{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "lib": ["dom", "es2015"],
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests/unit/**/*", "demo/**/*"],
  "exclude": ["node_modules", "dist/**/*", "demo/libs/**/*", "**/*.spec.*"]
}
